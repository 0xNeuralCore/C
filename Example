#include <winsock2.h>
#include <ws2tcpip.h>
#include <stdio.h>
#include <time.h>

#pragma comment(lib, "ws2_32.lib")

#define PORT 5000
#define BUF_SIZE 65536

int main() {
    WSADATA wsa;
    SOCKET sock;
    struct sockaddr_in server, client;
    int client_len = sizeof(client);
    char buffer[BUF_SIZE];
    int bytes;
    unsigned long long total = 0;
    time_t start, now;

    printf("Initialisation Winsock...\n");
    if (WSAStartup(MAKEWORD(2,2), &wsa) != 0) {
        printf("Erreur WSAStartup\n");
        return 1;
    }

    sock = socket(AF_INET, SOCK_DGRAM, IPPROTO_UDP);
    if (sock == INVALID_SOCKET) {
        printf("Erreur socket()\n");
        WSACleanup();
        return 1;
    }

    server.sin_family = AF_INET;
    server.sin_addr.s_addr = INADDR_ANY;
    server.sin_port = htons(PORT);

    if (bind(sock, (struct sockaddr*)&server, sizeof(server)) == SOCKET_ERROR) {
        printf("Erreur bind()\n");
        closesocket(sock);
        WSACleanup();
        return 1;
    }

    printf("Serveur UDP prêt sur le port %d — mesure pendant 5 secondes...\n", PORT);
    time(&start);
    do {
        bytes = recvfrom(sock, buffer, BUF_SIZE, 0, (struct sockaddr*)&client, &client_len);
        if (bytes > 0) total += bytes;
        time(&now);
    } while (difftime(now, start) < 5.0);

    double seconds = difftime(now, start);
    double mbps = (total * 8.0) / (seconds * 1000000.0);

    printf("\nReçu : %.2f Mo en %.2f s → %.2f Mbit/s\n",
           total / (1024.0 * 1024.0), seconds, mbps);

    closesocket(sock);
    WSACleanup();
    return 0;
}
